@model Project.Models.LoginModel
    <section class="register_section">
        <h2 class="Register_type">Enter the site</h2>

        <a class="label" asp-action="Register" asp-controller="Account">Registration</a>

        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label class="label" asp-for="Email">Enter email</label><br>
                    <input class="input" type="text" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <label class="label" asp-for="Password">Enter password</label><br>
                    <input class="input" asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <input class="but" type="submit" value="Entry" />
                </div>
            </div>
            <div class="logo"></div>
        </form>
</section>